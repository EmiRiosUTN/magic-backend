# Environment
NODE_ENV=development

# Server
PORT=3000

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/ai_platform?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Gemini
GEMINI_API_KEY=your-gemini-api-key-here

# Email (SMTP) - Will be configured by admin through API
# These are defaults for initial setup
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@magicai.com
SMTP_FROM_NAME=MagicAI Platform

# CORS
CORS_ORIGIN=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
